<% if current_user.admin? %>

    <h2> <%= @issue_admin.title %></h2>
    <h4>Status: <%= @issue_admin.status %> </h4>
    <p>Posted <%= time_ago_in_words(@issue_admin.created_at) %> ago.
    <span class="assign">
        <%= link_to "Assign Issue", mark_in_progress_path(id: @issue_admin.id, user_id: @issue_admin.user_id) %> |
    </span>
    <span class="resolved">
        <%= link_to "Resolved Issue", mark_resolved_path(id: @issue_admin.id, user_id: @issue_admin.user_id) %> |
    </span>
    <span class="closed">
        <%= link_to "Close Issue", mark_closed_path(id: @issue_admin.id, user_id: @issue_admin.user_id) %>
    </span>
    </p>
    <p><%= @issue_admin.description %></p>

    <%= form_for(@comment, url: comments_path(id: @issue_admin.id)) do |f| %>
        <%= f.label :comment %>
        <%= f.text_area :content %>

        <%= f.submit "Submit Comment" %>
    <% end %>

    <br/>
    <p>
        Recorded Comment(s):
        <% @comments.each do |comment| %>
            <p><%= comment.content %></p>
        <% end %>
    </p>

<% else%>

    <h2><%= @issue.title %></h2>
    <h4>Status: <%= @issue_admin.status %> </h4>
    <p>Posted <%= time_ago_in_words(@issue.created_at) %> ago.</p>
    <p><%= @issue.description %></p>

<% end %>
