<%= provide(:title, "Raise Issue") %>
<h3>Raise Issue</h3>
<%= form_for(@issue) do |f| %>

    <%= f.label :issue_title %>
    <%= f.text_field :title %>

    <%= f.label :issue_description %>
    <%= f.text_area :description %>

    <%= f.label :priority, "Priority [Low, Medium or High]" %>
    <%= f.text_field :priority %>

    <%= f.submit %>
<% end %>
