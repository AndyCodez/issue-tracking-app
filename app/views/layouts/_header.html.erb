<div class="top-bar">
    <div class="top-bar-left">
        <li class="menu-text"><%= link_to "Issue Tracker", root_url %></li>
    </div>
    <div class="top-bar-right">
        <ul class="menu">
            <li><%= link_to 'HOME', root_path %></li>
            <li><%= link_to 'ABOUT', about_path %></li>
            <li><%= link_to 'HELP', help_path %></li>
            <% if logged_in? %>

                <% if !@current_user.activated? %>
                    <li><%= link_to 'RENEW ACTIVATION LINK', new_account_activation_path(@current_user) %></li>
                <% else %>

                <% if @current_user.admin? %>
                    <li><%= link_to 'ISSUES', issues_path %></li>
                <% else %>
                        <li><%= link_to 'RAISE ISSUE', new_issue_path %></li>
                <% end %>
                <li><%= link_to 'PROFILE', current_user %></li>
                <li id="logout"><span class="alert label"><%= link_to 'LOGOUT', logout_path, method: :delete %></span></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>
